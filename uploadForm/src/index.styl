@import "theme.styl"

withAnimatedUnderline()
  position relative
  cursor pointer

  &::after
    content ''
    position absolute
    height 1px
    width 0
    background-color var(--text-color)
    margin auto
    bottom -4px
    left 50%
    transition width 0.3s ease-in-out, left 0.3s ease-in-out

  &:hover
    &::after
      width 100%
      left 0

html
body
#app
  margin 0
  height 100%
  width 100%
  display flex
  justify-content center
  align-items center
  font-family 'Ysabeau Infant', sans-serif
  background-color var(--background-color)

  *
    box-sizing border-box

.formRoot
  display flex
  width 100%
  max-width 450px

  .formWrapper
    display flex
    flex-direction column
    width 100%

    label
      font-size 24px
      line-height 26px
      font-weight 500
      color var(--text-color)
      margin-bottom 10px

    input[type = "text"]
    input[type = "number"]
      width 100%
      padding 10px 14px
      font-size 18px
      font-weight 400
      color var(--text-color)
      border-radius 10px
      border 2px solid var(--secondary-color)
      margin-bottom 14px
      transition border-color 0.3s ease-in-out
      background-color var(--background-color)

      &:focus
        outline none
        border-color var(--primary-color)

    button
      height 42px
      margin-top 20px
      background-color var(--primary-color)
      border none
      border-radius 10px
      font-size 18px
      font-weight 500
      color var(--text-color)
      cursor pointer
      transition background-color 0.3s ease-in-out

      &:hover
        background-color var(--secondary-color)

      &:focus
        outline none

    .audioTitle
      margin 12px 0 0 0
      font-size 22px
      line-height 24px
      text-align center
      color var(--text-color)
      font-weight 500
      white-space nowrap
      pointer-events none

      &.clickable
        pointer-events auto
        withAnimatedUnderline()

      .audioTooltipIcon
        margin-left 7px
        --icon-color var(--text-color)
        color var(--secondary-color)

      .removeAudioIcon
        margin-left 7px
        --icon-color var(--text-color)
        pointer-events auto
        cursor pointer
        transform translateY(2px)

        &:hover
          svg
            fill var(--primary-color)

        svg
          fill var(--secondary-color)
          width 100%
          height 100%

          transition fill 0.3s ease-in-out

    label[for = 'audio']
      display flex
      flex-direction column
      align-items center
      width 100%
      margin 0 0 30px 0

      &.hovered
        .audioLabelInnerWrapper
          border-color var(--primary-color)

      .audioLabelInnerWrapper
        position relative
        width 100%
        height 200px
        display flex
        justify-content center
        align-items center
        border 3px dashed var(--text-color)
        border-radius 10px
        transition border-color 0.3s ease-in-out

        .previewInputWrapper
          display flex
          flex-direction column
          justify-content center
          align-items center
          z-index 3

          .previewTitle
            font-size 18px
            line-height 20px
            text-align center
            color var(--text-color)
            margin 0
            white-space nowrap
            margin-top 8px
            pointer-events none

            &.clickable
              pointer-events auto
              withAnimatedUnderline()

            .previewTooltipIcon
              margin-left 5px
              --icon-color var(--text-color)
              color var(--secondary-color)

            .removePreviewIcon
              margin-left 5px
              --icon-color var(--text-color)
              pointer-events auto
              cursor pointer
              transform translateY(2px)

              &:hover
                svg
                  fill var(--primary-color)

              svg
                fill var(--secondary-color)
                width 100%
                height 100%
                transition fill 0.3s ease-in-out

          label[for = 'preview']
            display flex
            flex-direction column
            justify-content center
            align-items center
            margin-bottom 0

            svg
            img
              width 80px
              height 80px
              cursor pointer

            svg
              fill var(--text-color)

            img
              border-radius 10px
              object-fit cover
              box-shadow 0 0 4px rgba(0, 0, 0, 0.05)
