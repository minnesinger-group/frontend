darken(color, value)
  color-mix(unquote('in srgb'), color, rgb(0, 0, 0) value * 100%)

lighten(color, value)
  color-mix(unquote('in srgb'), color, rgb(255, 255, 255) value * 100%)

withAnimatedUnderline()
  position relative
  cursor pointer

  &::after
    content ''
    position absolute
    height 1px
    width 0
    background-color var(--text-color)
    margin auto
    bottom -4px
    left 50%
    transition width 0.3s ease-in-out, left 0.3s ease-in-out

  &:hover
    &::after
      width 100%
      left 0
