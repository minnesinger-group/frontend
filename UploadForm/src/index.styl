@import "theme.styl"
@require "screens"

darken(color, value)
  color-mix(unquote('in srgb'), color, rgb(0, 0, 0) value * 100%)

html
  font-family system-ui

html
body
  margin 0
  height 100%
  background-color var(--background-color)

#app
  min-height 100%
  width 100%
  display flex
  justify-content center
  align-items center

  *
    box-sizing border-box

.form-root
  display flex
  width 100%
  max-width 450px

  +tablet()
    max-width 100%
    padding 60px

  +mobile()
    max-width 100%
    padding 20px

  .form-wrapper
    display flex
    flex-direction column
    width 100%

    .fields-wrapper
      display flex
      flex-direction column

      label
        font-size 18px
        line-height 20px
        font-stretch 105%
        font-weight 300
        color var(--text-color)
        margin-bottom 8px

      input[type = "text"]
      input[type = "number"]
        width 100%
        padding 10px 14px
        font-size 20px
        line-height 24px
        font-weight 300
        color var(--text-color)
        border-radius 10px
        border 2px solid var(--secondary-color)
        margin-bottom 20px
        transition border-color 0.3s ease-in-out
        background-color var(--background-color)

        &:focus
          outline none
          border-color var(--primary-color)

    button
      padding 12px
      margin-top 20px
      background-color var(--primary-color)
      border none
      border-radius 10px
      font-size 20px
      line-height 24px
      font-weight 400
      color var(--text-color)
      cursor pointer
      transition background-color 0.3s ease-in-out

      &:hover
        background-color darken(var(--primary-color), 0.25)

      &:focus
        outline none
