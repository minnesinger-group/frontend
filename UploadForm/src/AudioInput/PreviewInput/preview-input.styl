@require "mixins"

.preview-input-root
  display flex
  flex-direction column
  justify-content center
  align-items center
  z-index 3

  .preview-input-field
    display flex
    flex-direction column
    justify-content center
    align-items center
    margin-bottom 0

    svg
    img
      width 80px
      height 80px
      cursor pointer

    svg
      fill var(--text-color)

    img
      border-radius 10px
      object-fit cover
      box-shadow 0 0 4px rgba(0, 0, 0, 0.05)

    .preview-title
      font-size 18px
      line-height 20px
      text-align center
      color var(--text-color)
      margin 0
      white-space nowrap
      margin-top 8px
      pointer-events none

      &.clickable
        pointer-events auto
        withAnimatedUnderline()

      .preview-tooltip-icon
        margin-left 5px
        --icon-color var(--text-color)
        color var(--secondary-color)

      .remove-preview-icon
        margin-left 5px
        --icon-color var(--text-color)
        pointer-events auto
        cursor pointer
        transform translateY(2px)

        &:hover
          svg
            fill var(--primary-color)

        svg
          fill var(--secondary-color)
          width 100%
          height 100%
          transition fill 0.3s ease-in-out
